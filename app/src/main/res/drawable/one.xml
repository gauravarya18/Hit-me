<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <shape android:shape="rectangle">
      <corners android:radius="1200dp" />
      <solid android:color="#b00f7dde" />
      <stroke
          android:width="6dp"
          android:color="#051450" />
      <padding
          android:bottom="8dp"
          android:left="8dp"
          android:right="8dp"
          android:top="8dp" />
    </shape>
  </item>
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="1000dp" />
      <solid android:color="#0c2fcc" />
      <stroke
          android:width="6dip"
          android:color="#03ae3c" />
      <padding
          android:bottom="4dp"
          android:left="4dp"
          android:right="4dp"
          android:top="4dp" />
    </shape>
  </item>
</selector>
